{
  "collections": [
    {
      "name": "books",
      "type": "base",
      "schema": [
        {
          "name": "title",
          "type": "text",
          "required": true
        },
        {
          "name": "author",
          "type": "text",
          "required": true
        },
        {
          "name": "description",
          "type": "text",
          "required": true
        },
        {
          "name": "category",
          "type": "relation",
          "required": true,
          "options": {
            "collectionId": "categories",
            "cascadeDelete": false
          }
        },
        {
          "name": "coverImage",
          "type": "file",
          "required": true,
          "options": {
            "maxSelect": 1,
            "maxSize": 5242880,
            "mimeTypes": [
              "image/jpeg",
              "image/png",
              "image/webp",
              "image/gif"
            ],
            "thumbs": ["100x100"]
          }
        },
        {
          "name": "pdfFile",
          "type": "file",
          "required": true,
          "options": {
            "maxSelect": 1,
            "maxSize": 10485760,
            "mimeTypes": [
              "application/pdf"
            ]
          }
        }
      ]
    },
    {
      "name": "categories",
      "type": "base",
      "schema": [
        {
          "name": "name",
          "type": "text",
          "required": true,
          "options": {
            "min": 2,
            "max": 50
          }
        }
      ]
    }
  ]
}