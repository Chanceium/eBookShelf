FROM alpine:latest

ARG PB_VERSION=0.25.8

RUN apk add --no-cache \
    unzip \
    ca-certificates

# Download and unzip PocketBase
ADD https://github.com/pocketbase/pocketbase/releases/download/v${PB_VERSION}/pocketbase_${PB_VERSION}_linux_amd64.zip /tmp/pb.zip
RUN unzip /tmp/pb.zip -d /pb/

# Copy pb_data to /tmp/pb_data (TEMPORARY STORAGE)
COPY ./pb_data /tmp/pb_data

# Create an entrypoint script
RUN echo '#!/bin/sh' > /entrypoint.sh && \
    echo 'if [ ! -d "/pb/pb_data/storage" ]; then' >> /entrypoint.sh && \
    echo '  echo "Storage folder missing. Copying pb_data..."' >> /entrypoint.sh && \
    echo '  cp -r /tmp/pb_data/* /pb/pb_data/' >> /entrypoint.sh && \
    echo 'fi' >> /entrypoint.sh && \
    echo 'exec /pb/pocketbase serve --http=0.0.0.0:8090' >> /entrypoint.sh && \
    chmod +x /entrypoint.sh

EXPOSE 8090

ENTRYPOINT ["/entrypoint.sh"]
