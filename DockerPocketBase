FROM alpine:latest

ARG PB_VERSION=0.25.8

RUN apk add --no-cache \
    unzip \
    ca-certificates

# Download and unzip PocketBase
ADD https://github.com/pocketbase/pocketbase/releases/download/v${PB_VERSION}/pocketbase_${PB_VERSION}_linux_amd64.zip /tmp/pb.zip
RUN unzip /tmp/pb.zip -d /pb/

# Copy pb_data to /tmp/pb_data
COPY ./pb_data /tmp/pb_data

# Conditionally copy pb_data from /tmp to /pb/pb_data if pbc_3940974 does not exist inside /pb/pb_data/storage
RUN if [ ! -d "/pb/pb_data/storage/pbc_3940974" ]; then cp -r /tmp/pb_data /pb/pb_data/; fi

EXPOSE 8090

# Start PocketBase
CMD ["/pb/pocketbase", "serve", "--http=0.0.0.0:8090"]
