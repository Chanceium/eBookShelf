FROM alpine:latest

ARG PB_VERSION=0.25.8

RUN apk add --no-cache \
    unzip \
    ca-certificates

# Download and unzip PocketBase
ADD https://github.com/pocketbase/pocketbase/releases/download/v${PB_VERSION}/pocketbase_${PB_VERSION}_linux_amd64.zip /tmp/pb.zip
RUN unzip /tmp/pb.zip -d /pb/

# Copy pb_data to /tmp/pb_data (TEMPORARY STORAGE)
COPY ./pb_data /tmp/pb_data

# Create entrypoint script
RUN cat <<EOF > /entrypoint.sh
#!/bin/sh
mkdir -p /pb/pb_data
if [ ! -d "/pb/pb_data/storage" ]; then
  echo "Storage folder missing. Copying pb_data..."
  cp -r /tmp/pb_data/* /pb/pb_data/
fi
exec /pb/pocketbase serve --http=0.0.0.0:8090
EOF

RUN chmod +x /entrypoint.sh

EXPOSE 8090

ENTRYPOINT ["/entrypoint.sh"]
